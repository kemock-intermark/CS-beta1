{
  "name": "clubsuite",
  "version": "0.1.0",
  "private": true,
  "description": "ClubSuite MVP - Telegram Bot + WebApp + API",
  "scripts": {
    "dev": "pnpm --filter @clubsuite/* run dev",
    "dev:bot": "pnpm --filter @clubsuite/bot run dev",
    "dev:webapp": "pnpm --filter @clubsuite/webapp run dev",
    "dev:api": "pnpm --filter @clubsuite/api run dev",
    "build": "pnpm -r run build",
    "build:bot": "pnpm --filter @clubsuite/bot run build",
    "build:webapp": "pnpm --filter @clubsuite/webapp run build",
    "build:api": "pnpm --filter @clubsuite/api run build",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm --filter @clubsuite/api run test:e2e",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "pnpm --filter @clubsuite/api run db:migrate",
    "db:seed": "pnpm --filter @clubsuite/api run db:seed",
    "db:studio": "pnpm --filter @clubsuite/api run db:studio",
    "db:generate": "pnpm --filter @clubsuite/api run db:generate",
    "verify": "node tools/verify.mjs",
    "fix": "node tools/fix.mjs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
